<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:background="@drawable/bgtile"
android:layout_height="fill_parent"
android:orientation="vertical" 
android:id="@+id/main"
android:tileMode="repeat">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="0.4"
android:layout_alignRight="@+id/main">

<ImageView 
android:layout_width="wrap_content" 
android:layout_height="match_parent"
android:id="@+id/logo_a" 
android:layout_alignParentLeft="true"
android:onClick="go_category"
android:adjustViewBounds="true"
/>

<TextView  android:layout_width="wrap_content" 
android:layout_height="match_parent"                   
android:id="@+id/letter_ah"
android:text="A-H"
android:textSize="50dp"
android:textColor="#000000"
android:layout_centerHorizontal="true"
android:adjustViewBounds="true"
android:scaleType="fitXY"
/>

<ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
android:src="@drawable/refresh_btn"
android:id="@+id/refresh_btn"  android:layout_alignParentRight="true"  
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="refresh_page"
/>


<ImageView 
android:layout_width="wrap_content" 
android:layout_height="match_parent"
android:src="@drawable/voice_btn"
android:id="@+id/voice_btn" 
android:layout_toLeftOf="@id/refresh_btn" 
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="voice_write_letter_a"
/>

<ImageView 
android:layout_width="wrap_content" 
android:layout_height="match_parent"
android:id="@+id/home_btn"
android:src="@drawable/home_btn" 
android:layout_toLeftOf="@+id/voice_btn"
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="home_page"

/>

</RelativeLayout>


<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="0dp"
android:layout_weight="1" 
android:gravity="center_horizontal"                   
android:background="@drawable/bgcontent"            
android:id="@+id/write_letter"
>

</RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="0.8" >

<ImageView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/prev_btn"
android:layout_alignParentBottom="true"
android:layout_alignParentStart="true"
android:src="@drawable/prev_arrow_btn"
android:layout_marginBottom="70dp"  
android:adjustViewBounds="true"
android:scaleType="fitXY"	
android:onClick="prev_tracing"
/>


<ImageView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/check_btn"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
android:src="@drawable/check_btn_1"
android:layout_marginBottom="70dp"                
android:onClick="check_play"
android:adjustViewBounds="true"
android:scaleType="fitXY"/>

<ImageView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/next_btn"
android:layout_alignParentBottom="true"                
android:layout_alignParentEnd="true"
android:src="@drawable/next_arrow_btn"
android:layout_marginBottom="70dp"                
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="next_tracing"
/>			
</RelativeLayout>

</LinearLayout>