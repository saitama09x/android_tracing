<ScrollView 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"	
android:background="@drawable/eval_letter_case_intro"
>


<LinearLayout 
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="0dp" 
android:orientation="vertical" 
>


<RelativeLayout  
android:layout_width="fill_parent"
android:layout_height="0dp"
android:layout_weight="0.3"
android:layout_marginBottom="10dp"
android:layout_alignParentLeft="true"
>
<ImageView 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:src="@drawable/eval_letter"
android:id="@+id/eval_letter" 
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="goIntro"
/>

</RelativeLayout>

<View 
android:layout_width="fill_parent" 
android:layout_height="0dp"
android:layout_weight="0.1"
/>

<LinearLayout    
android:layout_width="fill_parent"
android:layout_height="0dp"
android:layout_weight="0.7"
android:gravity="center_horizontal"
android:orientation="vertical" >

<ImageView 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:src="@drawable/eval_upper_case"
android:id="@+id/eval_upper_case" 
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:layout_marginBottom="10dp"
android:onClick="scoring_big_letters"/>


<ImageView 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:src="@drawable/eval_lower_case"
android:id="@+id/eval_lower_case" 
android:adjustViewBounds="true"
android:scaleType="fitXY"
android:onClick="scoring_small_letters"
android:layout_marginBottom="10dp"/>	

</LinearLayout>		   
<View 
android:layout_width="fill_parent" 
android:layout_height="0dp"
android:layout_weight="0.1"
/>
</LinearLayout>
</ScrollView>




